#!/bin/bash

# --- è‡ªåŠ¨è¯†åˆ«æœåŠ¡å™¨ç»‘å®šå…¬ç½‘ IPï¼Œå¹¶æ‰¹é‡åˆ›å»º V2Ray ç”¨æˆ· ---
# æ— éœ€æ‰‹åŠ¨å¡«å†™ IP_LIST

# è‡ªåŠ¨å¯»æ‰¾ config.json è·¯å¾„
CONFIG=""
POSSIBLE_PATHS=(
  "/usr/local/etc/v2ray/config.json"
  "/etc/v2ray/config.json"
  "/usr/local/etc/xray/config.json"
  "/etc/xray/config.json"
)

for path in "${POSSIBLE_PATHS[@]}"; do
  if [ -f "$path" ]; then
    CONFIG="$path"
    break
  fi
done

if [ -z "$CONFIG" ]; then
  echo "âŒ æœªæ‰¾åˆ° config.jsonï¼Œè¯·å…ˆå®‰è£…å¹¶é…ç½®å¥½ V2Ray/Xray"
  exit 1
fi

# è·å–æ‰€æœ‰å…¬ç½‘ IPï¼ˆæ’é™¤å›ç¯ã€æœ¬åœ°ã€å†…ç½‘ï¼‰
IP_LIST=$(ip -4 addr show | grep -oP '(?<=inet\s)\d+(\.\d+){3}' | grep -vE '^(127|10|172\.(1[6-9]|2[0-9]|3[01])|192\.168)')

if [ -z "$IP_LIST" ]; then
  echo "âŒ æœªæ£€æµ‹åˆ°å…¬ç½‘ IPï¼Œè¯·ç¡®è®¤æœåŠ¡å™¨ç»‘å®šäº†å¤š IP"
  exit 1
fi

# å®‰è£… jqï¼ˆå¦‚æœªå®‰è£…ï¼‰
if ! command -v jq &> /dev/null; then
  echo "[ğŸ“¦] å®‰è£… jq..."
  if command -v yum &> /dev/null; then
    yum install -y jq || { echo "âŒ å®‰è£… jq å¤±è´¥"; exit 1; }
  elif command -v apt &> /dev/null; then
    apt update && apt install -y jq || { echo "âŒ å®‰è£… jq å¤±è´¥"; exit 1; }
  else
    echo "âŒ ä¸æ”¯æŒçš„ç³»ç»Ÿï¼Œè¯·æ‰‹åŠ¨å®‰è£… jq"
    exit 1
  fi
fi

# éå†æ¯ä¸ªå…¬ç½‘ IPï¼Œæ·»åŠ ç”¨æˆ·
for IP in $IP_LIST; do
  echo "\nğŸ”§ æ­£åœ¨ä¸º IP [$IP] æ·»åŠ  VPN ç”¨æˆ·..."
  UUID=$(cat /proc/sys/kernel/random/uuid)
  PORT=$((20000 + RANDOM % 40000))

  jq --arg uuid "$UUID" \
     --argjson port "$PORT" \
     --arg listen "$IP" \
  '.inbounds += [{
    "port": $port,
    "listen": $listen,
    "protocol": "vmess",
    "settings": {
      "clients": [{
        "id": $uuid,
        "alterId": 0
      }]
    },
    "streamSettings": {
      "network": "tcp",
      "security": "none"
    }
  }]' "$CONFIG" > /tmp/config_tmp.json && mv /tmp/config_tmp.json "$CONFIG"

  echo "âœ… å·²æ·»åŠ ï¼šIP=$IP ç«¯å£=$PORT UUID=$UUID"
  sleep 1
done

# é‡å¯æœåŠ¡
(systemctl restart v2ray 2>/dev/null || systemctl restart xray 2>/dev/null)

# ç”Ÿæˆ list_users.sh
cat <<EOF > /root/list_users.sh
#!/bin/bash
jq -r '.inbounds[] | select(.protocol=="vmess") | "ç›‘å¬IP: \(.listen // "0.0.0.0")\\nç«¯å£: \(.port)\\nUUID: \(.settings.clients[0].id)\\n----"' "$CONFIG"
EOF
chmod +x /root/list_users.sh

# ç”Ÿæˆ delete_user.sh
cat <<EOF > /root/delete_user.sh
#!/bin/bash
read -p "è¯·è¾“å…¥è¦åˆ é™¤çš„ç«¯å£å·: " PORT
jq 'del(.inbounds[] | select(.port == '"\$PORT"'))' "$CONFIG" > /tmp/config_tmp.json && mv /tmp/config_tmp.json "$CONFIG"
(systemctl restart v2ray 2>/dev/null || systemctl restart xray 2>/dev/null)
echo "âœ… å·²åˆ é™¤ç«¯å£ \$PORT çš„ç”¨æˆ·"
EOF
chmod +x /root/delete_user.sh

echo -e "\nğŸ‰ æ‰€æœ‰å…¬ç½‘ IP ç”¨æˆ·å·²åˆ›å»ºå®Œæ¯•ï¼å¯ä½¿ç”¨ä»¥ä¸‹å‘½ä»¤ç®¡ç†ï¼š"
echo "ğŸ“„ æŸ¥çœ‹æ‰€æœ‰ï¼šbash /root/list_users.sh"
echo "âŒ åˆ é™¤ç”¨æˆ·ï¼šbash /root/delete_user.sh"
